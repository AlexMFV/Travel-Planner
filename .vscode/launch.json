{
    "version": "0.2.0",
    "configurations": [{
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}/server.js",
        "runtimeExecutable": "nodemon",
        "restart": true,
        "cwd": "${workspaceRoot}",
        "runtimeArgs": ["--inspect=8080"],
        "port": 8080,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }]
}